{
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "module": "es2015",
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "react-native",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "baseUrl": "src",
    "sourceMap": true,
    "watch": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2015.promise",
      "es2015",
      "es2016",
      "dom"
    ]
  },
  "filesGlob": [
    "app/**/*.ts",
    "app/**/*.tsx"
  ],
  "exclude": [
    "index.android.js",
    "index.ios.js",
    "build",
    "node_modules"
  ]
}